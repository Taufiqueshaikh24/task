<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/categories">Categories</a></li>
                <li><a href="/products">Products</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h1>Products in Category <%= categoryId %></h1>
        <ul>
            <% products.forEach(product => { %>
                <li>
                    <%= product.id %> - <%= product.name %> - <%= product.categoryId %> - <%= product.categoryName %> - <%= product.price %> - <%= product.description %>
                    <!-- Delete Product -->
                    <form action="/products/<%= product.id %>/<%= categoryId %>" method="POST" style="display:inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit">Delete</button>
                    </form>
                    <!-- Update Product -->
                    <form action="/products/<%= product.id %>" method="POST" style="display:inline;">
                        <input type="hidden" name="_method" value="PUT">
                        <input type="text" name="name" placeholder="New Product Name" required>
                        <input type="number" name="price" placeholder="New Price" required>
                        <textarea name="description" placeholder="New Description" required></textarea>
                        <button type="submit">Update</button>
                    </form>
                </li>
            <% }); %>
        </ul>
        <h2>Add Product</h2>
        <form action="/products/category/<%= categoryId %>" method="POST">
            <input type="text" name="name" placeholder="Product Name" required>
            <input type="number" name="price" placeholder="Price" required>
            <textarea name="description" placeholder="Description" required></textarea>
            <button type="submit">Add</button>
        </form>
        <a href="/categories">Back to Categories</a>

        <!-- Pagination -->
        <div>
            <% for (let i = 1; i <= Math.ceil(total / limit); i++) { %>
                <a href="/products/category/<%= categoryId %>?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
            <% } %>
        </div>
    </main>
    <footer>
        <p>&copy; 2024 My CRUD Application</p>
    </footer>
</body>
</html>
